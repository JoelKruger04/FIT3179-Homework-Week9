{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
"title": {"text": "Train Stations and Population Growth - Concentrated in the CBD", "fontSize": 18},
  "width": 1050,
  "height": 400,
  "projection": {
    "type": "mercator",
    "center": { "expr": "center_to" },
    "scale": { "expr": "zoom_level" }
  },
  "params": [
    {
      "name": "center_to",
      "value": [144.96, -37.81],
      "bind": {
        "input": "select",
        "options": [
          [144.96, -37.81],
          [145.134, -37.914],
          [144.84, -37.67],
          [144.833, -37.781],
          [145, -37.952]
        ],
        "labels": [
          "Melbourne CBD",
          "Monash Clayton",
          "Melbourne Airport",
          "Sunshine",
          "Sandringham"
        ],
        "name": "Map Center: "
      }
    },
    {
      "name": "zoom_level",
      "value": 70000,
      "bind": {
        "input": "range",
        "min": 25000,
        "max": 500000,
        "step": 100,
        "name": "Zoom: "
      }
    }
  ],
  "resolve": {
    "scale": { "color": "independent" }
  },
  "layer": [
    {
      "data": {
        "url": "output.json",
        "format": {
          "type": "topojson",
          "feature": "LGA_2024_AUST_GDA2020"
        }
      },
      "transform": [
        {
          "lookup": "properties.LGA_NAME24",
          "from": {
            "data": {
              "url": "PopChangeByLGA.csv"
            },
            "key": "Local Government Area",
            "fields": ["Percentage Change"]
          }
        }
      ],
      "mark": {
        "type": "geoshape"
      },
      "encoding": {
        "color": {
          "field": "Percentage Change",
          "type": "quantitative",
          "title": "Population Growth 2023-2024",
          "scale": { "scheme": "blues" }
        },
        "tooltip": [
          {
            "field": "properties.LGA_NAME24",
            "type": "nominal",
            "title": "Local Government Area"
          },
          {
            "field": "Percentage Change",
            "title": "Population Growth 2023-2024 (%)",
            "type": "quantitative"
          }
        ]
      }
    },
    {
      "data": {
        "url": "Annual_Metropolitan_Train_Station_Entries_2023-24.csv"
      },
      "mark": {
        "type": "circle",
        "tooltip": {
          "content": "data"
        }
      },
      "encoding": {
        "longitude": {
          "field": "Stop_long",
          "type": "quantitative"
        },
        "latitude": {
          "field": "Stop_lat",
          "type": "quantitative"
        },
        "size": {
          "field": "Pax_weekday",
          "type": "quantitative",
          "title": "Train Station Patronage",
          "bin": {
            "nice": true,
            "step": 15000
          }
        },
        "color": { "value": "black" },
        "tooltip": [
          { "field": "Stop_name", "type": "nominal", "title": "Stop Name" },
          {
            "field": "Pax_weekday",
            "type": "quantitative",
            "title": "Weekday Patronage",
            "formatType": "number"
          }
        ]
      }
    },
    {
      "data": {
        "url": "Annual_Metropolitan_Train_Station_Entries_2023-24.csv"
      },
      "mark": {
        "type": "text",
        "fontSize": 11.5,
        "dy": 15,
        "tooltip": {
          "content": "data"
        }
      },
      "encoding": {
        "longitude": {
          "field": "Stop_long",
          "type": "quantitative"
        },
        "latitude": {
          "field": "Stop_lat",
          "type": "quantitative"
        },

        "text": { "field": "Stop_name", "type": "nominal" },
        "color": { "value": "black" },
        "opacity": {
          "condition": {
            "test": "datum['Stop_name'] == 'Flinders Street' || datum['Stop_name'] == 'Richmond' || datum['Stop_name'] == 'Caulfield' || datum['Stop_name'] == 'Clayton' || datum['Stop_name'] == 'Pakenham' || datum['Stop_name'] == 'Cranbourne' || datum['Stop_name'] == 'Dandenong' || datum['Stop_name'] == 'Cheltenham' || datum['Stop_name'] == 'Glen Waverley' || datum['Stop_name'] == 'Frankston' || datum['Stop_name'] == 'Stony Point' || datum['Stop_name'] == 'Clifton Hill' || datum['Stop_name'] == 'Footscray' || datum['Stop_name'] == 'Essendon' || datum['Stop_name'] == 'North Melbourne'|| datum['Stop_name'] == 'Sunbury'|| datum['Stop_name'] == 'Craigieburn'|| datum['Stop_name'] == 'Mernda'|| datum['Stop_name'] == 'Hurstbridge'|| datum['Stop_name'] == 'Newport'|| datum['Stop_name'] == 'Sandringham'|| datum['Stop_name'] == 'Ringwood'|| datum['Stop_name'] == 'Belgrave'|| datum['Stop_name'] == 'Lilydale'|| datum['Stop_name'] == 'Sunshine'|| datum['Stop_name'] == 'Camberwell'|| datum['Stop_name'] == 'Werribee'|| datum['Stop_name'] == 'Watergardens'|| datum['Stop_name'] == 'Upfield'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          { "field": "Stop_name", "type": "nominal", "title": "Stop Name" },
          {
            "field": "Pax_weekday",
            "type": "quantitative",
            "title": "Train Station Patronage",
            "format": ",.2r"
          }
        ]
      }
    },
    {
      "data": {
        "url": "srl_stations.csv"
      },
      "mark": {
        "type": "circle",
        "tooltip": {
          "content": "data"
        },
        "size": 200
      },
      "encoding": {
        "longitude": {
          "field": "Stop_long",
          "type": "quantitative"
        },
        "latitude": {
          "field": "Stop_lat",
          "type": "quantitative"
        },
        "color": {
          "value": "darkorange"
        },
        "tooltip": [
          {
            "field": "Stop_name",
            "type": "nominal",
            "title": "Proposed SRL Station"
          }
        ]
      }
    }
  ]
}
